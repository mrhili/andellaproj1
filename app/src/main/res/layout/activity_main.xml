<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Welcome 2 ALC 4.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcome" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about-btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/welcome" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Dev Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dev-btn"
            app:layout_constraintTop_toBottomOf="@+id/about-btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>